generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id() @default(autoincrement())
  name String
  username String
  password String
  status String @default("use")
}

model Customers {
  id Int @id() @default(autoincrement())
  customer_id String
  company_name String
  dealer String
  position_dealer String
  address String @db.Text
  phone String
  taxid String
}
